{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "platform": "github",
  "repositories": [
    "oliviermichaelis/aur-packages"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^kubent-bin/PKGBUILD$"],
      "matchStrings" : ["pkgver=(?<currentValue>.*?)\n"],
      "depNameTemplate": "doitintl/kube-no-trouble",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["^sloth-bin/PKGBUILD$"],
      "matchStrings" : ["pkgver=(?<currentValue>.*?)\n"],
      "depNameTemplate": "slok/sloth",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["^spacectl-bin/PKGBUILD$"],
      "matchStrings" : ["pkgver=(?<currentValue>.*?)\n"],
      "depNameTemplate": "spacelift-io/spacectl",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["^linkerd-bin/PKGBUILD$"],
      "matchStrings" : ["pkgver=(?<currentValue>.*?)\n"],
      "depNameTemplate": "linkerd/linkerd2",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["linkerd/linkerd2"],
      "extractVersion": "^stable-(?<version>.*)$"
    }
  ]
}